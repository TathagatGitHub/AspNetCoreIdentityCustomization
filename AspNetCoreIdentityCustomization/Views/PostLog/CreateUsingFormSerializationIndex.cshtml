@model AspNetCoreIdentityCustomization.Core.PostLog
@{
    ViewData["Title"] = "Add new Postlog";
}
<div class="container">
    <h3 class="display-4">Add new postlog</h3>
    <hr />
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Congratulations</strong> You have added new log successfully. <br />
            Click <a asp-controller="PostLog" asp-action="GetPostLog" asp-route-id="@ViewBag.PostLogId">here</a> to view the details
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <span id="spinner" style="display:none;"><i class="fas fa-spinner fa-spin"></i></span>
    <div id="panel"></div>

    <form >
       
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      
        @Html.HiddenFor(model => model.PostLogId)
        @*<div class="form-group">*@
        <div class="row">
            <div class="col-sm-4 col-md-4">
                <label asp-for="SchedId" class="control-label"></label>
                <select asp-for="SchedId" class="form-control" asp-items="ViewBag.SchedId">
                    <option value="">Please choose your Scheudle</option>
                </select>
                @*@Html.DropDownList("SchedId", ViewBag.SchedId as IEnumerable<SelectListItem>)*@
                @*@Html.DropDownList("SchedId", new SelectList(ViewBag.SchedId, "Value", "Text", ViewBag.SelectedItem))*@

                <span asp-validation-for="SchedId" class="text-danger"></span>
            </div>

            <div class="col-sm-4 col-md-4">
                <label asp-for="ScheduleName" class="control-label"></label>
                <input asp-for="ScheduleName" class="form-control" />
                <span asp-validation-for="ScheduleName" class="text-danger"></span>
            </div>
            <div class="col-sm-4 col-md-4">
                <label asp-for="WeekNbr" class="control-label"></label>
                <input asp-for="WeekNbr" class="form-control" />
                <span asp-validation-for="WeekNbr" class="text-danger"></span>
            </div>
        </div>

        
        <div class="row">
            
            <div class="col-sm-4 col-md-4">
                <label asp-for="CreateDt" class="control-label"></label>
                <input asp-for="CreateDt" class="form-control" />
                <span asp-validation-for="CreateDt" class="text-danger"></span>
            </div>
            <div class="col-sm-4 col-md-4">
                <label asp-for="UpdateDt" class="control-label"></label>
                <input asp-for="UpdateDt" class="form-control" />
                <span asp-validation-for="UpdateDt" class="text-danger"></span>
            </div>
            <div class="col-sm-4 col-md-4">
                <label asp-for="WeekDate" class="control-label"></label>
                <input asp-for="WeekDate" class="form-control"></input>
                <span asp-validation-for="WeekDate" class="text-danger"></span>
            </div>
        </div>
      
        <div class="row">

            <div class="form-group">
                <input type="submit" value="Add Postlog" class="btn btn-primary" id="btnCreateUsingSerializeFormData" />
            </div>
        </div>
    </form>
    <div id="ajaxresult">
        Result will show here
    </div>
</div>


